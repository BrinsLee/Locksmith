<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nested_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        tools:context=".ui.activity.EditPassActivity">


        <TextView
            android:id="@+id/name_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:text="@string/name"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header_layout" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/name_edit_et"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/bg_edit_text_selector"
            android:hint="@string/input_name"
            android:inputType="text"
            android:paddingStart="5dp"
            android:textCursorDrawable="@drawable/edit_cursor_color"
            app:layout_constraintTop_toBottomOf="@id/name_title_tv">

        </androidx.appcompat.widget.AppCompatEditText>


        <TextView
            android:id="@+id/account_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:text="@string/account"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name_edit_et" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/account_edit_et"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/bg_edit_text_selector"
            android:hint="@string/input_account"
            android:inputType="text"
            android:paddingStart="5dp"
            android:textCursorDrawable="@drawable/edit_cursor_color"
            app:layout_constraintTop_toBottomOf="@id/account_title_tv"></androidx.appcompat.widget.AppCompatEditText>

        <TextView
            android:id="@+id/password_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:text="@string/password"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/account_edit_et" />

        <EditText
            android:id="@+id/password_edit_et"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/bg_edit_text_selector"
            android:hint="@string/input_pass"
            android:inputType="textPassword"
            android:paddingStart="5dp"
            android:paddingEnd="@dimen/dp_10"
            android:textCursorDrawable="@drawable/edit_cursor_color"
            app:layout_constraintTop_toBottomOf="@id/password_title_tv">

        </EditText>

        <ImageView
            android:id="@+id/iv_password_visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_password_visible"
            app:layout_constraintEnd_toEndOf="@id/password_edit_et"
            app:layout_constraintTop_toTopOf="@id/password_edit_et"
            app:layout_constraintBottom_toBottomOf="@id/password_edit_et"
            android:layout_marginEnd="@dimen/dp_10"
            android:onClick="onVisibleClick"
            />

        <LinearLayout
            android:id="@+id/date_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/password_edit_et">

            <TextView
                android:id="@+id/create_date_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="创建日期：2020/3/10" />

            <TextView
                android:id="@+id/update_date_tv"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:background="@drawable/bg_edit_text"
                android:gravity="center"
                android:visibility="gone"
                android:text="最近修改：2020/3/10" />

        </LinearLayout>

        <!--    <view
                android:layout_width="1px"
                android:layout_height="45dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/date_layout"
                app:layout_constraintBottom_toBottomOf="@id/date_layout"
                />-->

        <com.brins.locksmith.ui.widget.RoundConstraintLayout
            android:id="@+id/note_layout_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:background="@color/white"
            android:paddingBottom="20dp"
            app:layout_constraintTop_toBottomOf="@id/date_layout"
            app:round_corner="5dp">

            <TextView
                android:id="@+id/note_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:text="@string/note"
                android:textSize="12sp"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/note_edit_et"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/bg_edit_text_selector"
                android:gravity="top"
                android:hint=""
                android:maxLines="4"
                android:paddingStart="5dp"
                android:paddingTop="5dp"
                android:textCursorDrawable="@drawable/edit_cursor_color"
                app:layout_constraintTop_toBottomOf="@id/note_title_tv">

            </androidx.appcompat.widget.AppCompatEditText>
        </com.brins.locksmith.ui.widget.RoundConstraintLayout>

        <include
            android:id="@+id/header_layout"
            layout="@layout/header" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>