<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.EditPassActivity">


        <include
            android:id="@+id/header_layout"
            layout="@layout/header" />

        <TextView
            android:id="@+id/name_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:text="@string/name"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header_layout" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/name_edit_et"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textCursorDrawable="@drawable/edit_cursor_color"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/bg_edit_text_selector"
            android:hint="请输入名称"
            android:paddingStart="5dp"
            app:layout_constraintTop_toBottomOf="@id/name_title_tv">

        </androidx.appcompat.widget.AppCompatEditText>


        <TextView
            android:id="@+id/account_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:text="@string/account"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name_edit_et" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/account_edit_et"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textCursorDrawable="@drawable/edit_cursor_color"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/bg_edit_text_selector"
            android:hint="请输入账户名"
            android:paddingStart="5dp"
            app:layout_constraintTop_toBottomOf="@id/account_title_tv"></androidx.appcompat.widget.AppCompatEditText>

        <TextView
            android:id="@+id/password_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:text="@string/password"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/account_edit_et" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/password_edit_et"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:textCursorDrawable="@drawable/edit_cursor_color"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/bg_edit_text_selector"
            android:hint="请输入密码"
            android:paddingStart="5dp"
            app:layout_constraintTop_toBottomOf="@id/password_title_tv">

        </androidx.appcompat.widget.AppCompatEditText>

        <LinearLayout
            android:id="@+id/date_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/password_edit_et">

            <TextView
                android:id="@+id/create_date_tv"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:background="@drawable/bg_edit_text"
                android:gravity="center"
                android:text="创建日期：2020/3/10" />

            <TextView
                android:id="@+id/update_date_tv"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:background="@drawable/bg_edit_text"
                android:gravity="center"
                android:text="最近修改：2020/3/10" />

        </LinearLayout>

        <!--    <view
                android:layout_width="1px"
                android:layout_height="45dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/date_layout"
                app:layout_constraintBottom_toBottomOf="@id/date_layout"
                />-->

        <com.brins.locksmith.ui.widget.RoundConstraintLayout
            app:layout_constraintTop_toBottomOf="@id/date_layout"
            android:id="@+id/note_layout_rl"
            android:paddingBottom="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:round_corner="5dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/note_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp"
                android:text="@string/note"
                android:textSize="12sp"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/note_edit_et"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:gravity="top"
                android:textCursorDrawable="@drawable/edit_cursor_color"
                android:background="@drawable/bg_edit_text_selector"
                android:hint=""
                android:paddingStart="5dp"
                android:paddingTop="5dp"
                android:maxLines="4"
                app:layout_constraintTop_toBottomOf="@id/note_title_tv">

            </androidx.appcompat.widget.AppCompatEditText>
        </com.brins.locksmith.ui.widget.RoundConstraintLayout>

        <Button
            android:id="@+id/save_account"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_bg_selected"
            android:enabled="true"
            android:clickable="true"
            android:text="@string/save"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="50dp"
            app:layout_constraintTop_toBottomOf="@+id/note_layout_rl" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>